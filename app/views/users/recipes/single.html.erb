<div class="page-container">
  <div class="grid mb-16">
    <%= turbo_frame_tag "single_recipe_#{params[:id]}", src: "/recipes/single_post/#{params[:id]}", loading: :lazy do %>
      <div class="flex flex-col gap-4">
        <div class="flex gap-4 animate-pulse">
          <div class=" bg-gray-400 h-20 w-3"></div>
          <div class=" bg-gray-400 h-20 w-5/12"></div>
        </div>
        <div class="animate-pulse bg-gray-500 h-96 w-full"></div>
        <!-- ---------------------------- -->
        <div class="flex justify-end gap-4 animate-pulse">
          <div class=" bg-gray-200 h-10 w-20"></div>
          <div class=" bg-gray-200 h-10 w-24"></div>
        </div>
        <!-- ---------------------------- -->
        <div class="w-full flex flex-col gap-4 ">
          <h3 class="animate-pulse w-2/12 h-10 text-2xl bg-gray-500"></h3>
          <h3 class="animate-pulse w-20 h-10 text-2xl bg-gray-500 rounded-md"></h3>
        </div>
        <p>&nbsp</p>
        <% 5.times do %>
          <div class="w-full flex flex-col gap-4 bg-gray-100 p-4">
            <div class="w-full flex gap-1 ">
              <% 5.times do %>
                <%= inline_svg_tag(
            "svg/star.svg", 
            size: '30% * 20%', 
            class: "w-4 h-4 fill-yellow-500 hover:stroke-yellow-500"
          ) %>
              <% end %>
            </div>
            <div class="animate-pulse w-3/12 bg-gray-300 py-1"></div>
            <p class="animate-pulse w-full bg-gray-300 py-2"></p>
            <p class="animate-pulse w-full bg-gray-300 py-2"></p>
            <span class="animate-pulse w-20 h-10 text-2xl bg-gray-400 rounded-md"></span>
          </div>
        <% end %>
        <!-- ---------------------------- -->
      </div>
    <% end %>
  </div>
</div>
</div>
