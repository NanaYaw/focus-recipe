 <% if  @plans.count > 0 %>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4" id="plans" src="plans">
    <div data-controller="content-loader" data-content-loader-url-value="<%= plans_path %>">
      <i class="fas fa-spinner fa-spin"></i>
      Loading comments... This content will be replaced by the content of the `posts/comments` partial generated by Rails.
    </div>
    <% @plans.each do |plan| %>
      <%= render plan %>
    <% end %>
  </div>
<% else %>
  <%= render "empty_add" %>
<% end %>
