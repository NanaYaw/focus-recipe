<div class="w-full h-full bg-gray-100">
  <div class="page-container">
    <%= render "users/plans/shared/top_cta" %>
    <div class="flex justify-between my-6">
      <h1 class="px-3 py-2 text-3xl border-l-4 border-accent">Plans</h1>
      <%= link_to  new_plan_path, method: :get, data: {turbo_frame: 'modal'}, class: "flex items-center gap-2 text-xl button button--secondary" do %>
        <i class="bi bi-plus text-2xl"></i>
        <span>Create plan</span>
      <% end %>
    </div>
    <% turbo_stream_from "plan" %>
    <div class="flex flex-col gap-4">
      <%= turbo_frame_tag :lazy_loading, src: lazy_update_plans_path do %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6">
          <div  class="w-full flex flex-col rounded-lg overflow-hidden shadow-md h-32 bg-white p-4 relative roun">
            <div class="flex flex-col h-full">
              <h4 class="w-7/12 py-1 bg-gray-400"></h4>
            </div>
            <div class="w-full flex justify-end">
              <span class="flex items-center justify-center btn h-7 w-7 rounded-full bg-gray-300">
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
