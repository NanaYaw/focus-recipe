<%= turbo_frame_tag "review-#{parent_id}"  do %>
  <div class="p-5 my-5 bg-slate-100">
    <%= form_with(model: [recipe, review]) do |f| %>
      <div class="flex flex-col">
        <%= f.label :stars %>
        <%= f.select :stars, Review::STARS, prompt: "Pick one" %>
      </div>
      <div class="flex flex-col my-4">
        <%= f.label :comment %>
        <%= f.text_area :comment, placeholder: "What did you think?" %>
      </div>
      <div class="flex justify-end mt-5">
        <%= f.hidden_field :parent_id %>
        <%= f.submit "Post Review", class: "button button--primary" %>
      </div>
    <% end %>
  </div>
<% end %>
