<div class="page-container flex justify-center">
  <div class="w-full sm:w-6/12">
    <h2><%= t "devise.invitations.edit.header" %></h2>
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "flex flex-col gap-4 mt-4 " }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>
      <% if f.object.class.require_password_on_accepting %>
        <div class="flex flex-col field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="flex flex-col field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
      <% end %>
      <div class="flex justify-end actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "button button--primary" %>
      </div>
    <% end %>
  </div>
</div>
