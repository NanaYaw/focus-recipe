<%= form_with(model: grocery) do |form| %>
  <% if grocery.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(grocery.errors.count, "error") %> prohibited this grocery_category from being saved:</h2>
      <ul>
        <% grocery.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "text-gray-800" %>
  </div>
  <div>
    <%= form.label :grocery_category, style: "display: block" %>
    <%= form.collection_select(:grocery_category_id, GroceryCategory.all, :id, :name, {prompt: "pick one"}, {:class => "text-gray-800"})  %>
  </div>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "text-gray-800"  %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
