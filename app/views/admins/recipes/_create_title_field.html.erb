<% if defined? edit %>
  <div  id="recipe" data-controller="recipe" data-recipe-id-value="<%= recipe_id %>" class="flex flex-col justify-end  w-full bg-gray-100 p-4 mb-4">
    <label>Recipe title</label>
    <input class="w-full" name="title" type="text" placeholder="" value="<%= title %>" data-recipe-target="title">
    <button  class="button--primary text-white rounded-md p-2" value="create-recipe-title" data-action="click->recipe#editTitle">Update</button>
  </div>
<% else %>
  <div  id="recipe" data-controller="recipe" data-recipe-id-value="<%= recipe_id %>" class="flex flex-col w-full bg-gray-100 p-4 mb-4">
    <label>Recipe title</label>
    <input class="w-full" name="title" type="text" placeholder="" value="<%= title %>" data-recipe-target="title">
    <button  class="button--primary rounded-md text-white p-2 mt-6" value="create-recipe-title" data-action="click->recipe#createTitle">Update</button>
  </div>
<% end %>
